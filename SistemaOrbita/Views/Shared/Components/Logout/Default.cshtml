<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave @User.Identity.Name?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" id="logout" class="form-horizontal mb-lg" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/BusinessManagement", new { area = "", controller = "Home", action = "Index" })" novalidate="novalidate">
                            <input type="hidden" name="__RequestVerificationToken" value="@Html.Raw(ViewContext.HttpContext.Request.Cookies["XSRF-TOKEN"])">
                            <button type="submit" class="btn btn-primary modal-bs-confirm" id="submitLogout">Logout</button>
                            <button type="button" class="btn btn-default modal-bs-dismiss" data-bs-dismiss="modal">Cancel</button>
                        </form>
                    }
                }
            </div>
        </div>
    </div>
</div>