@model ErrorViewModel
@using SistemaOrbita.Model.ViewModels

@{
    var statusCode = Model.StatusCode ?? 500;
    var statusMessage = Model.Message ?? "An unexpected error occurred.";
    var requestId = Model.RequestId ?? "N/A";
}

@{
    ViewData["Title"] = "Error" + @statusCode;
}

@if (statusCode == 404)
{

    <div class="text-center">
        <p class="lead">
            <div>
                <img src="~/img/pages/undraw_page_not_found_re_e9o6.svg" class="text-center w-50" />
            </div>
            <div class="mt-3">
                <h3>@statusMessage</h3>
            </div>
        </p>
        <hr>
        <p>
            The page you are looking for may have been moved or not available. Please check the URL or return to the homepage.
        </p>
        <p>
            If the problem persists, please contact the system administrator.
        </p>
        <div class="alert alert-warning" role="alert">
            <strong>Requisition ID:</strong> @requestId
        </div>
        <a href="/BusinessManagement/Home" class="btn btn-primary">Back to home</a>
    </div>

}
else if (statusCode == 403)
{
    <div class="text-center">
        <p class="lead">
            <div>
                <img src="~/img/pages/undraw_access_denied_re_awnf.svg" class="text-center w-25" />
            </div>
            <div class="mt-3">
                <h3>@statusMessage</h3>
            </div>
        </p>
        <hr>
        <p>
            You do not have permissions to access the requested page. Check the URL or return to the home page.
        </p>
        <p>
            If you need access, contact the system administrator.
        </p>
        <div class="alert alert-warning" role="alert">
            <strong>Requisition ID:</strong> @requestId
        </div>
        <a href="/BusinessManagement/Home" class="btn btn-primary">Back to home</a>
    </div>

}

else {
    <div class="text-center">
        <p class="lead">
            <div>
                <img src="~/img/pages/undraw_rocket.svg" class="text-center w-25" />
            </div>
            <div class="mt-3">
                <h3>@statusMessage</h3>
            </div>
        </p>
        <hr>
        <p>
            An unexpected error occurred on the server. Please try later.
        </p>
        <p>
            If the problem persists, please contact the system administrator.
        </p>
        <div class="alert alert-warning" role="alert">
            <strong>Requisition ID:</strong> @requestId
        </div>
        <a href="/BusinessManagement/Home" class="btn btn-primary">Back to home</a>
    </div>
}