@using SistemaOrbita.Model.ViewModels;

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var pageTitle = new PageTitleViewModel
            {
                Title = "Role list",
                Breadcrumbs = new List<BreadcrumbItem>
                {
                    new BreadcrumbItem { Text = "Home", Area = "BusinessManagement", Controller = "Home", Action = "Index" },
                    new BreadcrumbItem { Text = "Role", Area = "Admin", Controller = "Role", Action = "Index" },
                }
            };
}
<partial name="_PageTitle" model="@pageTitle" />

<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <div class="col-10">
            <div class="mb-3">
                <a asp-action="Upsert" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="bi bi-plus-lg"></i>
                    </span>
                    <span class="text">New role</span>
                </a>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="text-center">Role</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th class="text-center">Role</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/pages/role.js"></script>
}