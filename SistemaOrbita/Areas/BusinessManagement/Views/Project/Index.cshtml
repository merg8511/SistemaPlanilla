@using SistemaOrbita.Model.ViewModels;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pageTitle = new PageTitleViewModel
            {
                Title = "Project list",
                Breadcrumbs = new List<BreadcrumbItem>()
                {
                    new BreadcrumbItem { Text = "Home", Area = "BusinessManagement", Controller = "Home", Action = "Index" },
                    new BreadcrumbItem { Text = "Project", Area = "BusinessManagement", Controller = "Project", Action = "Index" },
                }
            };
}

<partial name="_PageTitle" model="@pageTitle" />

<div id="container-fluid">
    <div class="mb-3">
        <a asp-action="Upsert" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="bi bi-plus-lg"></i>
            </span>
            <span class="text">New project</span>
        </a>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>
                            <th>Manager</th>
                            <th>Description</th>
                            <th>Start date</th>
                            <th>End date</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">Name</th>
                            <th>Manager</th>
                            <th>Description</th>
                            <th>Start date</th>
                            <th>End date</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModal">Project details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <!-- Project Name and Description -->
                    <div class="row">
                        <div class="col">
                            <strong>Name</strong>
                            <p id="projectName"></p>
                        </div>                        
                    </div>
                    <div class="row">                        
                        <div class="col">
                            <strong>Description</strong>
                            <p id="projectDescription"></p>
                        </div>
                    </div>
                    <!-- Manager and Start Date -->
                    <div class="row">
                        <div class="col">
                            <strong>Manager</strong>
                            <p id="projectManager"></p>
                        </div>
                        <div class="col">
                            <strong>Start date</strong>
                            <p id="projectStartDate"></p>
                        </div>
                    </div>
                    <!-- End Date and Status -->
                    <div class="row">
                        <div class="col">
                            <strong>End date</strong>
                            <p id="projectEndDate"></p>
                        </div>
                        <div class="col">
                            <strong>Status</strong>
                            <p id="projectStatus"></p>
                        </div>
                    </div>
                    <!-- Created At and Updated At -->
                    <div class="row">
                        <div class="col">
                            <strong>Created at</strong>
                            <p id="projectCreatedAt"></p>
                        </div>
                        <div class="col">
                            <strong>Updated at</strong>
                            <p id="projectUpdatedAt"></p>
                        </div>
                    </div>
                    <!-- Progress Bar -->
                    <div class="row">
                        <div class="col">
                            <strong>Progress</strong>
                            <div class="progress">
                                <div id="projectProgress" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/project.js"></script>
}