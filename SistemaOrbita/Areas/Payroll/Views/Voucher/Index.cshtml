@using SistemaOrbita.Model.ViewModels;
@{
    ViewData["Title"] = "Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pageTitle = new PageTitleViewModel
            {
                Title = "Voucher list",
                Breadcrumbs = new List<BreadcrumbItem>
                {
                    new BreadcrumbItem { Text = "Home", Area = "BusinessManagement", Controller = "Home", Action = "Index" },
                    new BreadcrumbItem { Text = "Voucher", Area = "Payroll", Controller = "Voucher", Action = "Index" },
                }
            };
}
<partial name="_PageTitle" model="@pageTitle" />


<div id="container-fluid">
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Employer</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th class="text-center">Total Amount</th>
                            <th>Created by</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">Employer</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th class="text-center">Total Amount</th>
                            <th>Created by</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/voucher.js"></script>
}