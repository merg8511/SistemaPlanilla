@using SistemaOrbita.Model.ViewModels;
@{
    ViewData["Title"] = "Event log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pageTitle = new PageTitleViewModel
            {
                Title = "Event log list",
                Breadcrumbs = new List<BreadcrumbItem>
                {
                    new BreadcrumbItem { Text = "Home", Area = "BusinessManagement", Controller = "Home", Action = "Index" },
                    new BreadcrumbItem { Text = "Event log", Area = "Payroll", Controller = "EventLog", Action = "Index" },
                }
            };
}
<partial name="_PageTitle" model="@pageTitle" />


<div id="container-fluid">
    <div class="mb-3">
        <a asp-action="Upsert" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="bi bi-plus-lg"></i>
            </span>
            <span class="text">New event log</span>
        </a>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Employee</th>
                            <th>Event</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Authorized by</th>
                            <th>Type</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">Employee</th>
                            <th>Event</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Authorized by</th>
                            <th>Type</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailName"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <strong>Amount</strong>
                            <p id="txtAmount"></p>
                        </div>
                        <div class="col">
                            <strong>Event</strong>
                            <p id="txtEvent"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <strong>Employee</strong>
                            <p id="txtEmployeeName"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <strong>Notes</strong>
                            <p id="txtNotes"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <strong>Authorized by</strong>
                            <p id="txtAuthorized"></p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <strong>Status</strong>
                            <p><span id="txtStatus" class="badge bg-success"></span></p>
                        </div>
                        <div class="col">
                            <strong>Date</strong>
                            <p id="txtCreatedAt"></p>
                        </div>
                    </div>

                    <hr class="p-0 m-0" style="border:1px solid" />
                    <div class="row">

                        <div class="col">
                            <strong>Recurring</strong>
                            <p id="txtRecurring"></p>
                        </div>
                        <div class="col">
                            <strong>Frequency</strong>
                            <p id="txtFrequency"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <strong>Start date</strong>
                            <p id="txtStartDate"></p>
                        </div>
                        <div class="col">
                            <strong>End date</strong>
                            <p id="txtEndDate"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/pages/event-log.js"></script>
}